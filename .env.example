# Copy this file to `.env` and fill in the secrets/connection details.

RECIPES_APP_NAME=KitchenPal API
RECIPES_DEBUG=false

# MongoDB connection information
RECIPES_MONGODB_URI=mongodb://localhost:27017
RECIPES_MONGODB_DB=recipes
RECIPES_MONGODB_COLLECTION=recipes

# OpenAI configuration
RECIPES_OPENAI_MODEL=gpt-4o-mini
# Store your API key here for local development (optional but convenient)
RECIPES_OPENAI_API_KEY=
